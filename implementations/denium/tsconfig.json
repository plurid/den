{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],

        "baseUrl": ".",
        "paths": {
            "~data/*": [
                "./source/modules/data/*"
            ],
        },

        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "source"
    ]
}
